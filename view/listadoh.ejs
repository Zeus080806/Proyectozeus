<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listado de funcionarios</title>
    <link rel="stylesheet" href="for.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Listado de Funcionarios</h1>
    <table>
        <thead>
            <tr>
                <th>IDusuarios</th>
                <th>Cedula</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Correo</th>
                <th>EPS</th>
                <th>FP</th>
                <th>Estado civil</th>
            </tr>
        </thead>
        <tbody>
            <% if (funcionarios.length > 0) { %>
                <% funcionarios.forEach(function(funcionario) { %>
                    <tr>
                        <td><%= funcionario.IDusuarios %></td>
                        <td><%= funcionario.cedula %></td>
                        <td><%= funcionario.nombres %></td>
                        <td><%= funcionario.apellidos %></td>
                        <td><%= funcionario.correo %></td>
                        <td><%= funcionario.EPS %></td>
                        <td><%= funcionario.FP %></td>
                        <td><%= funcionario.estadocivil %></td>
                        <td>
                            <a href="/editar-funcionario/<%= funcionario.IDusuarios %>">Editar</a>
                    <form action="/eliminar-funcionario/<%= funcionario.IDusuarios %>" method="POST" style="display:inline;">
                        <button type="submit">Eliminar</button>
                    </form>

                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="8">No se encontraron funcionarios</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <a href="/registrar-funcionario">Registrar Nuevo Funcionario</a>
</body>
</html>
